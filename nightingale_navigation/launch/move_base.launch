<!-- Move Base launch file -->

<launch>
    <arg name="local" default="true"/>

    <machine name="movo1" address="movo1" user="robohub" 
                 env-loader="/home/movo/env.sh" default="true" unless="$(arg local)"/>
                 
    <arg name="global_frame" default="map" />
    <arg name="eband_rotational_threshold_multiplier" default="1.0" />
    <arg name="eband_disallow_hysteresis" default="false" />
    <!-- <arg name="map_topic" default="/map" /> -->

    <node pkg="move_base" type="move_base" name="move_base" clear_params="true">
    <!-- Remap into correct namespace for mux -->
        <remap from="cmd_vel" to="/movo/navigation/cmd_vel" />
        
        <!-- Remap the odometry feedback topic -->
        <remap from="/odom" to="/movo/odometry/local_filtered" />

        <!-- Load common configuration files -->
        <rosparam file="$(find nightingale_navigation)/configs/eband_planner_params.yaml" command="load" />
        <rosparam file="$(find nightingale_navigation)/configs/global_planner_params.yaml" command="load" />
        <rosparam file="$(find nightingale_navigation)/configs/move_base_params.yaml" command="load" />
        <rosparam file="$(find nightingale_navigation)/configs/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find nightingale_navigation)/configs/costmap_common_params.yaml" command="load" ns="local_costmap" />

        <!-- Load global/local costmap specific parameters -->
        <rosparam file="$(find nightingale_navigation)/configs/costmap_local.yaml" command="load"/>
        <rosparam file="$(find nightingale_navigation)/configs/costmap_global_map.yaml" command="load"/>

        <param name="base_local_planner" value="eband_local_planner/EBandPlannerROS" />
        <param name="base_global_planner" value="global_planner/GlobalPlanner" />

        <param name="EBandPlannerROS/rotation_threshold_multiplier" value="$(arg eband_rotational_threshold_multiplier)" />
        <param name="EBandPlannerROS/disallow_hysteresis" value="$(arg eband_disallow_hysteresis)" />
    </node>
    
</launch> 
           


